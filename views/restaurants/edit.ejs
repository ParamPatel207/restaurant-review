<% include ../partials/header %>
<div class="row">
  <h1 style="text-align: center;">Edit <%= restaurants.name %></h1>
  <div class="rwd-form">
    <form action="/restaurants/<%= restaurants._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" name="restaurants[name]" value="<%= restaurants.name %>" autocomplete="off" />
      </div>
      <div class="form-group">
        <label for="image">Update Image</label>
        <input id="image" type="file" name="image" accept="image/*" autocomplete="off" />
      </div>
      <div class="form-group">
        <label for="location">Location</label>
        <input class="form-control" type="text" name="restaurants[location]" id="location" value="<%= restaurants.location %>" autocomplete="off" />
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <input class="form-control" type="text" name="restaurants[description]" value="<%= restaurants.description %>" autocomplete="off" />
      </div>
      <div class="form-group">
        <button class="btn btn-md btn-primary btn-block">Update</button>
      </div>
    </form>
    <a href="/restaurants/<%= restaurants._id %>">Back</a>
  </div>
</div>
<% include ../partials/footer %>