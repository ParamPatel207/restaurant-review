<% include ../partials/header %>
<div class="row">
  <h1 style="text-align: center;">Create a New Restaurant</h1>
  <div class="rwd-form">
    <form action="/restaurants" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" name="name" placeholder="Yosemite" autocomplete="off" required />
      </div>
      <div class="form-group">
        <label for="image">Image</label>
        <input id="image" type="file" name="image" accept="image/*" autocomplete="off" required />
      </div>
      <div class="form-group">
        <label for="location">Location</label>
        <input class="form-control" type="text" name="location" id="location" placeholder="address of place" autocomplete="off" />
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <input class="form-control" type="text" name="description" placeholder="This is a great restaurant" autocomplete="off" />
      </div>
      <div class="form-group">
        <button class="btn btn-md btn-primary btn-block">Submit!</button>
      </div>
    </form>
    
    <a href="/restaurants">Back</a>
  </div>
</div>
<% include ../partials/footer %>